<Window x:Class="ProjektManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projektübersicht"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#F0F0F0">

    <DockPanel Margin="10" Background="#F0F0F0">
        <!-- Üst Menü -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 10">
            <Button Name="BackButton" Content="← Zurück" Width="100" Click="BackButton_Click" Visibility="Collapsed"
                    Background="#D0D0D0" Foreground="#333333" FontWeight="Bold" />
            <Button Content="Neues Projekt" Width="120" Margin="5"
                    Background="#D0D0D0" Foreground="#333333" FontWeight="Bold" Click="NeuesProjekt_Click"/>
            <Button x:Name="ProjektBearbeitenButton" Content="Projekt bearbeiten" Width="120" Margin="5"
        Background="#D0D0D0" Foreground="#333333" FontWeight="Bold" Click="ProjektBearbeiten_Click" IsEnabled="False"/>

            <Button x:Name="ProjektLoeschenButton" Content="Projekt löschen" Width="120" Margin="5"
        Background="#D0D0D0" Foreground="#333333" FontWeight="Bold" Click="ProjektLoeschen_Click" IsEnabled="False"/>
            <Button Content="LST Importieren"
        Width="140"
        Margin="5"
        Background="#D0D0D0"
        Foreground="#333333"
        FontWeight="Bold"
        Click="LSTImportieren_Click"/>


        </StackPanel>

        <!-- İçerik Alanı -->
        <ContentControl Name="MainContent" Background="#E0E0E0"/>
    </DockPanel>
</Window>
