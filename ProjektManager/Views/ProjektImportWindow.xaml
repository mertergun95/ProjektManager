<Window x:Class="ProjektManager.Views.ProjektImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neues Projekt importieren"
        Height="600"
        Width="800"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Açıklama + Dosya Seç -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Projekt Excel-Datei auswählen:"
                       Margin="0,0,10,0"
                       VerticalAlignment="Center"
                       FontWeight="Bold"/>
            <Button Content="Datei wählen"
                    Width="150"
                    Click="DateiWaehlen_Click"
                    Background="#D0D0D0"
                    FontWeight="Bold"/>
        </StackPanel>

        <!-- Seçilen dosya yolu -->
        <TextBlock Grid.Row="1"
                   Name="DateiPfadText"
                   Margin="0 10 0 10"
                   TextWrapping="Wrap"
                   FontStyle="Italic"
                   Foreground="Gray"/>

        <!-- Excel Tablosu -->
        <DataGrid Grid.Row="2"
                  Name="ExcelGrid"
                  AutoGenerateColumns="True"
                  Margin="0 10 0 10"
                  Background="White"
                  AlternatingRowBackground="#F9F9F9"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"/>

        <!-- Länge ekleme -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 10 0 10">
            <TextBox Name="LaengeNameBox"
                     Width="200"
                     Height="30"
                     FontSize="14"
                     Padding="5"
                     VerticalContentAlignment="Center"
                     Margin="0,0,10,0"
                     Text="Länge 1"/>
            <Button Content="Länge hinzufügen"
                    Width="150"
                    Height="30"
                    Click="LaengeHinzufuegen_Click"
                    Background="#C8E6C9"
                    FontWeight="Bold"
                    Margin="0,0,10,0"/>
            <Button Content="Fertigstellen"
                    Width="120"
                    Height="30"
                    Click="Fertigstellen_Click"
                    Background="#BBDEFB"
                    FontWeight="Bold"
                    Margin="0,0,10,0"/>
            <Button Content="Länge löschen"
                    Width="120"
                    Height="30"
                    Click="LaengeLoeschen_Click"
                    Background="#FFCDD2"
                    FontWeight="Bold"/>
        </StackPanel>

        <!-- Länge listesi -->
        <ListBox Grid.Row="4"
                 Name="LaengenListe"
                 Height="150"
                 Margin="0,0,0,10"
                 FontSize="14"
                 MouseDoubleClick="LaengenListe_MouseDoubleClick"
                 Background="WhiteSmoke"/>

        <!-- Länge düzenleme -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="0,10,0,0">
            <TextBox Name="LaengeUmbenennenBox"
                     Width="200"
                     Height="30"
                     FontSize="14"
                     Padding="5"
                     VerticalContentAlignment="Center"
                     Margin="0,0,10,0"/>
            <Button Content="Umbenennen"
                    Width="100"
                    Height="30"
                    Click="LaengeUmbenennen_Click"
                    Background="#E0E0E0"
                    FontWeight="Bold"
                    Margin="0,0,10,0"/>
            <Button Content="↑"
                    Width="40"
                    Height="30"
                    Click="LaengeNachOben_Click"
                    FontWeight="Bold"
                    Margin="0,0,5,0"/>
            <Button Content="↓"
                    Width="40"
                    Height="30"
                    Click="LaengeNachUnten_Click"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
