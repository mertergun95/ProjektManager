<Window x:Class="ProjektManager.Views.LeistungBearbeitenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leistung bearbeiten" Height="400" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Leistungsbeschreibung:" Grid.Row="0" Grid.Column="0" Margin="0 5"/>
        <TextBox x:Name="BeschreibungBox" Grid.Row="0" Grid.Column="1" Margin="5" LostFocus="Input_LostFocus"/>

        <TextBlock Text="Bahnseite:" Grid.Row="1" Grid.Column="0" Margin="0 5"/>
        <TextBox x:Name="BahnseiteBox" Grid.Row="1" Grid.Column="1" Margin="5" LostFocus="Input_LostFocus"/>

        <TextBlock Text="Km von:" Grid.Row="2" Grid.Column="0" Margin="0 5"/>
        <TextBox x:Name="KmVonBox" Grid.Row="2" Grid.Column="1" Margin="5" LostFocus="Input_LostFocus"/>

        <TextBlock Text="Km bis:" Grid.Row="3" Grid.Column="0" Margin="0 5"/>
        <TextBox x:Name="KmBisBox" Grid.Row="3" Grid.Column="1" Margin="5" LostFocus="Input_LostFocus"/>

        <TextBlock Text="Anmerkung:" Grid.Row="4" Grid.Column="0" Margin="0 5"/>
        <TextBox x:Name="AnmerkungBox" Grid.Row="4" Grid.Column="1" Margin="5" LostFocus="Input_LostFocus"/>

        <TextBlock Text="Anmerkung2:" Grid.Row="5" Grid.Column="0" Margin="0 5"/>
        <TextBox x:Name="Anmerkung2Box" Grid.Row="5" Grid.Column="1" Margin="5" LostFocus="Input_LostFocus"/>

        <Button Content="Schließen" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Right" Margin="5" Padding="10 5" Click="Button_Click"/>
    </Grid>
</Window>
