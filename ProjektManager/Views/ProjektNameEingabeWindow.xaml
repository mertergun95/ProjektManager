<Window x:Class="ProjektManager.Views.ProjektNameEingabeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projektname eingeben" Height="174" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Bitte geben Sie den Projektnamen ein:" Margin="0 0 0 10"/>
        <TextBox x:Name="ProjektNameTextBox" Width="200" Height="25" Margin="10"/>
        <Button Content="OK" Width="80" Click="OK_Click"/>
    </StackPanel>
</Window>
